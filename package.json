{
  "name": "node-typescript-boilerplate",
  "author": "GastonGit",
  "version": "1.0.12",
  "scripts": {
    "start": "set NODE_ENV=production&&ts-node -r dotenv/config src/app.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "dev": "ts-node-dev -r dotenv/config --respawn src/app.ts",
    "test": "set NODE_ENV=test&&mocha --exit",
    "test-with-coverage": "set NODE_ENV=test&&nyc mocha --slow 0 --exit",
    "prepare": "husky install"
  },
  "dependencies": {
    "@types/config": "^0.0.41",
    "@types/cors": "^2.8.12",
    "@types/helmet": "^4.0.0",
    "chai-http": "^4.3.0",
    "config": "^3.3.7",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "helmet": "^5.1.0",
    "nyc": "^15.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.6.2",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "chai": "^4.3.6",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "mocha": "^10.0.0",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4"
  }
}
