{
  "name": "node-typescript-boilerplate",
  "author": "GastonGit",
  "version": "1.0.7",
  "scripts": {
    "start": "ts-node -r dotenv/config src/app.ts",
    "lint": "eslint . --ext .ts",
    "dev": "ts-node-dev -r dotenv/config --respawn src/app.ts",
    "test": "set NODE_ENV=test&&mocha --exit",
    "test-with-coverage": "set NODE_ENV=test&&nyc mocha --slow 0 --exit",
    "prepare": "husky install"
  },
  "dependencies": {
    "@types/cors": "^2.8.12",
    "@types/helmet": "^4.0.0",
    "chai-http": "^4.3.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "nyc": "^15.1.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.6.2",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "chai": "^4.3.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "mocha": "^10.0.0",
    "prettier": "^2.3.2",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  }
}
